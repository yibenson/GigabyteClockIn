<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UserProfileTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:colorBackground">@color/gray</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="MyEditText" parent="@android:style/Widget.EditText">
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/main_deep</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:textColor">@color/main_deep</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main_deep</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main_deep</item>
    </style>

    <style name="Button" parent="android:Widget.Material.Button">
        <item name="android:background">@color/main_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LightButton" parent="android:Widget.Material.Button">
        <item name="android:background">@color/main</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/main</item>
        <item name="boxStrokeErrorColor">@color/red</item>
           
    </style>

    <style name="DialogBaseTheme" parent="android:Theme.Holo.Light.Dialog">

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#929292</item>
    </style>
</resources>